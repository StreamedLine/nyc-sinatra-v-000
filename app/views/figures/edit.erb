<form action="/figures/<%=@figure.id%>" method="POST">
	<input type="hidden" id="hidden" name="_method" value="PATCH">
	<label for="figure[name]">Name: </label><input id="figure_name" name="figure[name]" value="<%=@figure.name%>">
	
	<% @titles.each do |title| %>
		<input type="checkbox" 
			   id="title_<%=title.id%>" name="figure[title_ids][]" value="<%=title.id%>" <%= @figure.titles.include? title ? 'checked' : ''%>><%=title.name%></input>
	<% end %>

	<label for="title[name]">New Title</label> <input type="text" id="new_title" name="title[name]">

	<% @landmarks.each do |landmark| %>
		<input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%=landmark.id%>" <%= @figure.landmarks.include? landmark ? 'checked' : ''%>><%=landmark.name%></input>
	<% end %>

	<label for="landmark[name]">New Landmark</label> <input type="text" id="new_landmark" name="landmark[name]">
	
	<button type="submit">Edit Figure</button>
</form>